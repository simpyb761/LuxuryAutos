@model LuxuryAutos.Models.Location

@{
    ViewData["Title"] = "Create";
}

<div class="bg-danger rounded-2 pb-1 ps-1">
    <h1 class="text-center">Create</h1>

    <h4 class="text-center">Cars</h4>

    <div class="row">
        <div class="col-md-4 p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                <div class="form-group">
                    <label asp-for="LocationName" class="control-label"></label>
                    <input asp-for="LocationName" class="form-control" />
                    <span asp-validation-for="LocationName" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manager" class="control-label"></label>
                    <input asp-for="Manager" class="form-control" />
                    <span asp-validation-for="Manager" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2 border-0" style="color:red;background-color:black;" />
                </div>
            </form>
            <div>
                <a style="text-decoration:none;" asp-action="Index"><button class="btn btn-primary mt-2 border-0" style="color:red;background-color:black;">Back to List</button></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
