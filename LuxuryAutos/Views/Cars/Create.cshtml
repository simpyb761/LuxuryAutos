@model LuxuryAutos.Models.Cars

@{
    ViewData["Title"] = "Create";
}
<div class="bg-danger rounded-2 pb-1 ps-1">
    <h1 class="text-center">Create</h1>

    <h4 class="text-center">Cars</h4>

    <div class="row">
        <div class="col-md-4 p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                <div class="form-group">
                    <label asp-for="Model" class="control-label"></label>
                    <input asp-for="Model" class="form-control" />
                    <span asp-validation-for="Model" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Make" class="control-label"></label>
                    <select asp-for="Make" class="form-control" asp-items="ViewBag.CarMakes"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-Dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TopSpeed" class="control-label"></label>
                    <input asp-for="TopSpeed" class="form-control" />
                    <span asp-validation-for="TopSpeed" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CarPicture" class="control-label"></label>
                    <input asp-for="CarPicture" class="form-control" />
                    <span asp-validation-for="CarPicture" class="text-dark"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationId" class="control-label"></label>
                    <select asp-for="LocationId" class="form-control" asp-items="ViewBag.LocationId"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary mt-2 border-0" style="color:red;background-color:black;" />
                </div>
            </form>
            <div>
                <a style="text-decoration:none;" asp-action="Index"><button class="btn btn-primary mt-2 border-0" style="color:red;background-color:black;">Back to List</button></a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
